                    {# Stripe Elements / other widget container. Use JS to mount the widget here. #}
                    <div id="payment-widget" 
                        data-public-key="{{ stripe_public_key }}"
                        data-return-url="{{ url('payment_success') }}">
                        <div id="link-authentication-element"></div>
                        <div id="checkout-message" class="d-none text-danger small mt-2" role="alert"></div>
                    </div>
                </section>
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a href="{{ path('app_cart') }}" class="btn btn-link">Edit cart</a>
                    <button id="checkout-submit" type="button" class="btn btn-primary btn-lg">
                        Pay now
                    </button>
                </div>
            </form>
        </div>

        <div class="col-lg-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Order summary</h5>
                    <div class="cart d-flex flex-column">
                        <div class="flex-grow-1 overflow-auto p-3">
                            <ul class="list-unstyled mb-0 cart-items" id="cart-list-container">
                            </ul>
                        </div>
                    </div>
                    <template id="cart-item-template">
                        <li class="cart-item d-flex align-items-center mb-3 pb-3 border-bottom">
                            <div class="badge bg-secondary me-3 cart-item-id d-none"></div>
                            <img src="" alt="" width="60" height="60" class="me-3 cart-item-img">
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between">
                                    <h6 class="mb-0 fw-bold small cart-item-name"></h6>
                                    <span class="text-muted small">x 
                                        <input type="number" class="cart-item-quantity" min="1" style="width:60px;">
                                    </span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-1">
                                    <span class="cart-item-price text-primary fw-bold small"></span>
                                    <button class="btn btn-sm text-danger remove-item-btn"><i class="bi bi-trash"></i></button>
                                </div>
                            </div>
                        </li>
                    </template>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal</span>
                        <strong id="cart-subtotal">0.00 €</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping</span>
                        <strong id="cart-shipping">3.99 €</strong>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-0">
                        <span class="fw-bold">Total</span>
                        <strong id="cart-total">0.00 €</strong>
                    </div>
                </div>
            </div>
        </div>
        
