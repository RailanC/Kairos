{# templates/checkout/checkout.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Checkout - Kairos{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# Add any checkout-specific CSS if needed #}
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row gx-4">
        <div class="col-lg-7">
            <h2 class="mb-4">Checkout</h2>

            
            <form id="checkout-form" action="{{ path('app_checkout') }}" method="post" novalidate>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('checkout') }}" />
                <input type="hidden" name="idempotency_key" id="idempotency_key" value="{{ idempotency_key|default('') }}">

                <section class="mb-4">
                    <h5>Contact</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="full_name" class="form-label">Full name</label>
                            <input type="text" class="form-control" id="full_name" name="customer[name]" required>
                        </div>
                        <div class="col-md-6">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="customer[email]" required>
                        </div>
                        <div class="col-md-6">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="phone" name="customer[phone]">
                        </div>
                    </div>
                </section>

                <section class="mb-4">
                    <h5>Shipping address</h5>
                    <div class="row g-3">
                        <div class="col-12">
                            <label for="ship_line1" class="form-label">Address line 1</label>
                            <input type="text" class="form-control" id="ship_line1" name="shipping[line1]" required>
                        </div>
                        <div class="col-12">
                            <label for="ship_line2" class="form-label">Address line 2</label>
                            <input type="text" class="form-control" id="ship_line2" name="shipping[line2]">
                        </div>
                        <div class="col-md-6">
                            <label for="ship_city" class="form-label">City</label>
                            <input type="text" class="form-control" id="ship_city" name="shipping[city]" required>
                        </div>
                        <div class="col-md-3">
                            <label for="ship_postal" class="form-label">Postal code</label>
                            <input type="text" class="form-control" id="ship_postal" name="shipping[postal_code]" required>
                        </div>
                        <div class="col-md-3">
                            <label for="ship_country" class="form-label">Country</label>
                            <select id="ship_country" name="shipping[country]" class="form-select" required>
                                {% for code, name in countries %}
                                    <option value="{{ code }}">{{ name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </section>

                <section class="mb-4">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="billing-same" checked>
                        <label class="form-check-label" for="billing-same">
                            Billing address same as shipping
                        </label>
                    </div>

                    <div id="billing-address" class="mt-3 d-none">
                        <h6>Billing address</h6>
                        <div class="row g-3">
                            <div class="col-12">
                                <label for="bill_line1" class="form-label">Address line 1</label>
                                <input type="text" class="form-control" id="bill_line1" name="billing[line1]">
                            </div>
                            <div class="col-12">
                                <label for="bill_line2" class="form-label">Address line 2</label>
                                <input type="text" class="form-control" id="bill_line2" name="billing[line2]">
                            </div>
                            <div class="col-md-6">
                                <label for="bill_city" class="form-label">City</label>
                                <input type="text" class="form-control" id="bill_city" name="billing[city]">
                            </div>
                            <div class="col-md-3">
                                <label for="bill_postal" class="form-label">Postal code</label>
                                <input type="text" class="form-control" id="bill_postal" name="billing[postal_code]">
                            </div>
                            <div class="col-md-3">
                                <label for="bill_country" class="form-label">Country</label>
                                <select id="bill_country" name="billing[country]" class="form-select">
                                    <option value="">Choose...</option>
                                    {% for code, country in countries %}
                                        <option value="{{ code }}">{{ country }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="mb-4">
                    <h5>Shipping method</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="shipping_method" id="ship_standard" value="standard" checked>
                        <label class="form-check-label" for="ship_standard">Standard — 3–5 days</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="shipping_method" id="ship_express" value="express">
                        <label class="form-check-label" for="ship_express">Express — 1–2 days (+ additional)</label>
                    </div>
                </section>

                <section class="mb-4">
                    <h5>Payment</h5>
                    <div class="mb-3">
                        <div class="form-check form-check-inline">
                            <input id="pm_card" class="form-check-input" type="radio" name="payment_method" value="card" checked>
                            <label class="form-check-label" for="pm_card">Card</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input id="pm_paypal" class="form-check-input" type="radio" name="payment_method" value="paypal">
                            <label class="form-check-label" for="pm_paypal">PayPal</label>
                        </div>
                    </div>

                    {# Stripe Elements / other widget container. Use JS to mount the widget here. #}
                    <div id="payment-widget">
                        <div id="card-element" style="min-height: 44px; border: 1px solid #e6e6e6; padding: 10px; border-radius: 6px;">
                            {# Stripe Elements will be mounted here via JS #}
                        </div>
                        <div id="card-errors" class="text-danger small mt-2" role="alert"></div>
                    </div>
                </section>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a href="{{ path('app_cart') }}" class="btn btn-link">Edit cart</a>
                    <button id="checkout-submit" type="submit" class="btn btn-primary btn-lg">
                        Pay now
                    </button>
                </div>
            </form>
        </div>

        <div class="col-lg-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Order summary</h5>

                    <ul id="checkout-cart-items" class="list-unstyled mb-3">
                        {% if cart is defined and cart|length > 0 %}
                            {% for item in cart %}
                                <li class="d-flex justify-content-between align-items-center mb-2 cart-item"
                                    data-price="{{ item.price|default(0) }}"
                                    data-quantity="{{ item.quantity|default(1) }}">
                                    <div>
                                        <strong>{{ item.name }}</strong>
                                        <div class="small text-muted">x{{ item.quantity }}</div>
                                    </div>
                                    <div class="text-end">
                                        <div class="small text-muted">{{ (item.price * item.quantity)|number_format(2, '.', ',') }} €</div>
                                    </div>
                                </li>
                            {% endfor %}
                        {% else %}
                            <li class="text-muted">Your cart is empty.</li>
                        {% endif %}
                    </ul>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal</span>
                        <strong id="cart-subtotal">0.00 €</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping</span>
                        <strong id="cart-shipping">0.00 €</strong>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-0">
                        <span class="fw-bold">Total</span>
                        <strong id="cart-total">0.00 €</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/checkout.js') }}"></script>
{% endblock %}