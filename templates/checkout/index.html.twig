{% block body %}

<div class="container py-5">
    <div class="row gx-4">
        <div class="col-lg-7">
            <h2 class="mb-4">Checkout</h2>
            
            <form id="ajax-checkout-form" action="{{ path('app_checkout') }}" method="post" novalidate>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('checkout') }}" />
                <input type="hidden" name="idempotency_key" id="idempotency_key" value="{{ idempotency_key|default('') }}">

                <section class="mb-4">
                    <h5>Contact</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="full_name" class="form-label">Full name</label>
                            <input type="text" class="form-control" id="full_name" name="customer[name]" required>
                        </div>
                        <div class="col-md-6">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="customer[email]" required>
                        </div>
                        <div class="col-md-6">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="phone" name="customer[phone]">
                        </div>
                    </div>
                </section>

                <section class="mb-4">
                    <h5>Shipping address</h5>
                    <div class="row g-3">
                        <div class="col-12">
                            <label for="ship_line1" class="form-label">Address line 1</label>
                            <input type="text" class="form-control" id="ship_line1" name="shipping[line1]" required>
                        </div>
                        <div class="col-12">
                            <label for="ship_line2" class="form-label">Address line 2</label>
                            <input type="text" class="form-control" id="ship_line2" name="shipping[line2]">
                        </div>
                        <div class="col-md-6">
                            <label for="ship_city" class="form-label">City</label>
                            <input type="text" class="form-control" id="ship_city" name="shipping[city]" required>
                        </div>
                        <div class="col-md-3">
                            <label for="ship_postal" class="form-label">Postal code</label>
                            <input type="text" class="form-control" id="ship_postal" name="shipping[postal_code]" required>
                        </div>
                        <div class="col-md-3">
                            <label for="ship_country" class="form-label">Country</label>
                            <select id="ship_country" name="shipping[country]" class="form-select" required>
                                {% for code, name in countries %}
                                    <option value="{{ code }}">{{ name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </section>

                <section class="mb-4">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="billing-same" checked>
                        <label class="form-check-label" for="billing-same">
                            Billing address same as shipping
                        </label>
                    </div>

                    <div id="billing-address" class="mt-3 d-none">
                        <h6>Billing address</h6>
                        <div class="row g-3">
                            <div class="col-12">
                                <label for="bill_line1" class="form-label">Address line 1</label>
                                <input type="text" class="form-control" id="bill_line1" name="billing[line1]">
                            </div>
                            <div class="col-12">
                                <label for="bill_line2" class="form-label">Address line 2</label>
                                <input type="text" class="form-control" id="bill_line2" name="billing[line2]">
                            </div>
                            <div class="col-md-6">
                                <label for="bill_city" class="form-label">City</label>
                                <input type="text" class="form-control" id="bill_city" name="billing[city]">
                            </div>
                            <div class="col-md-3">
                                <label for="bill_postal" class="form-label">Postal code</label>
                                <input type="text" class="form-control" id="bill_postal" name="billing[postal_code]">
                            </div>
                            <div class="col-md-3">
                                <label for="bill_country" class="form-label">Country</label>
                                <select id="bill_country" name="billing[country]" class="form-select">
                                    <option value="">Choose...</option>
                                    {% for code, country in countries %}
                                        <option value="{{ code }}">{{ country }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                </section>

