{# templates/checkout/success.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Payment Successful - Kairos{% endblock %}

{% block body %}
<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 p-5">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                </div>
                <h1 class="fw-bold mb-3">Thank You!</h1>
                <p class="text-muted mb-4">
                    Your payment was processed successfully. We've sent a confirmation email with your order details.
                </p>
                
                <div class="bg-light p-3 rounded mb-4">
                    <p class="small mb-0 text-uppercase fw-bold text-muted">Order Status</p>
                    <span class="badge bg-success px-3 py-2">Confirmed & Paid</span>
                </div>

                <div class="d-grid gap-2">
                    <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg">
                        Continue Shopping
                    </a>
                    <a href="#" class="btn btn-link text-decoration-none">View Order History</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}