                {% include 'partials/_cart_sidebar.html.twig' %}
            </div>
                {% if app.user %}
                    <button id="profile-toggle-btn" class="rounded-circle btn btn-link text-dark text-decoration-none">
                        <img src="{{ asset(app.user.avatarPath) }}" alt="Profile" class="rounded-circle" width="32" height="32">
                    </button>
                    {% include 'partials/_profile_sidebar.html.twig' %}
                {% else %}
                    <button type="button" class="btn me-2" data-bs-toggle="modal" data-bs-target="#loginModal">
                        Login
                    </button>
                {% endif %}
            </div>
