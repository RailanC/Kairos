    <nav class="navbar navbar-expand-lg m-3">
        <div class="container-fluid d-flex flex-column flex-lg-row align-items-center">
            <a class="navbar-brand mb-3 mb-lg-0 me-lg-3" href="{{ path('app_home') }}">
                <img src="{{ asset('images/logo.png') }}" alt="Logo" width="70" height="100">
            </a>
            <div class="d-flex flex-column align-items-center w-100 w-lg-auto">
                <div class="d-flex flex-row justify-content-center mb-3 w-100 order-2 order-lg-1">
                    <a href="{{ path('app_product') }}" class="btn me-lg-2 mb-2 mb-lg-0 d-flex flex-row align-items-center border-0 text-dark">
                        <span style="font-size: 1.7em;">üç∞</span>
