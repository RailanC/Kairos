{# templates/partials/_cart_sidebar.html.twig #}
<div class="cart-sidebar d-flex flex-column">
    <div class="p-3 border-bottom d-flex justify-content-between align-items-center bg-light">
        <h5 class="mb-0 fw-bold">My Cart</h5>
    </div>

    <div class="flex-grow-1 overflow-auto p-3">
        <ul class="list-unstyled mb-0 cart-items" id="side-cart-list-container">
        </ul>
    </div>

    <div class="p-3 border-top bg-light" id="cart-footer">
        <div class="d-flex justify-content-between mb-3">
            <span class="fw-bold">Total</span>
            <span id="side-cart-total" class="fw-bold text-primary">0.00 â‚¬</span>
        </div>
        <a href="{{ path('app_checkout') }}" class="btn btn-primary w-100 py-2 fw-bold" style="background-color: #28a745; border: none;">
            Checkout
        </a>
    </div>
</div>

{# This template is hidden from the user, JS uses it to build the list #}
<template id="side-cart-item-template">
    <li class="cart-item d-flex align-items-center mb-3 pb-3 border-bottom">
        <div class="badge bg-secondary me-3 cart-item-id d-none"></div>
        <img src="" alt="" width="60" height="60" class="me-3 cart-item-img">
        <div class="flex-grow-1">
            <div class="d-flex justify-content-between">
                <h6 class="mb-0 fw-bold small cart-item-name"></h6>
                <span class="text-muted small">x 
                    <input type="number" class="cart-item-quantity" min="1" style="width:60px;">
                </span>
            </div>
            <div class="d-flex justify-content-between align-items-center mt-1">
                <span class="cart-item-price text-primary fw-bold small"></span>
                <button class="btn btn-sm text-danger remove-item-btn"><i class="bi bi-trash"></i></button>
            </div>
        </div>
    </li>
</template>